<div class="container">
	<h3>게시판 맛보기</h3>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>번호</th>
				<th>제목</th>
				<th>수정</th>
				<th>삭제</th>
			</tr>		
		</thead>
		<tbody>
			<% @boards.each do |board| %>
			<tr>
				<td><%= board.id %></td>
				<td><a href="/boards/<%=board.id%>"><%= board.title%></a></td>			
				<td><a href="/boards/<%=board.id%>/edit">수정</a></td>
				<td><a href="/boards/<%=board.id%>" data-method="delete">삭제</a></td>
			</tr>		
			<% end %>
		</tbody>
	</table>
	<a href="/boards/new">글쓰기</a>
</div>