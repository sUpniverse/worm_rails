<div class="container">
	<h3>게시판 맛보기</h3>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>번호</th>
				<th>제목</th>
				<th>수정</th>
				<th>삭제</th>
			</tr>		
		</thead>
		<tbody>
			<% @boards.each do |board| %>
			<tr class="board" data-value="<%=board.id%>">
				<td><%= board.id %></td>
				<td><a href="/boards/<%=board.id%>"><%= board.title%></a></td>			
				<td><a href="/boards/<%=board.id%>/edit">수정</a></td>
				<td><a href="/boards/<%=board.id%>" data-method="delete">삭제</a></td>
			</tr>		
			<% end %>
		</tbody>
	</table>
	<a href="/boards/new" class="btn btn-primary">글쓰기</a>
	<button type="button" class="btn btn-info">제목 바꾸기</button>
	<button type="button" class="btn btn-danger color-btn">빨강</button>
	<button type="button" class="btn btn-primary color-btn">파랑</button>
	<button type="button" class="btn btn-success color-btn">초록</button>
</div>


<script  src="./tr-link.js">
	
</script>

